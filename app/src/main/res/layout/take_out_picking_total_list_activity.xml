<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/take_out_picking_total_list_drawer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:openDrawer="start">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ffffff"
        tools:context=".TakeOutPickingActivity">

        <RelativeLayout
            android:id="@+id/take_out_picking_total_list_layout_title"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_alignParentTop="true"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:background="@drawable/bt_title">

            <Button
                android:id="@+id/take_out_picking_total_list_btn_menu"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:contentDescription="@string/btn_menu_desc"
                android:background="@drawable/title_btn_selector" />

            <TextView
                android:id="@+id/take_out_picking_total_list_text_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/take_out_picking_total_list_btn_menu"
                android:layout_centerVertical="true"
                android:layout_marginLeft="12.5dp"
                android:text="@string/take_out_picking_total"
                android:textColor="#e9bf9a"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/take_out_picking_total_list_text_user"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:text="@string/main_scrn"
                android:textColor="#ffffff"
                android:textSize="11.15sp"/>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_below="@+id/take_out_picking_total_list_layout_title"
            android:paddingTop="30dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            >

            <ScrollView
                android:id="@+id/take_out_scroll_menu"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="7"
                            android:text="@string/picking_loc"
                            android:textColor="#333333"
                            android:textSize="18sp" />

                        <EditText
                            android:id="@+id/take_out_picking_total_list_edit_picking_loc"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_weight="3"
                            android:textColor="#333333"
                            android:textSize="18sp"
                            android:selectAllOnFocus="true"
                            android:background="@drawable/input_selector"
                            />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        >

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="7"
                            android:text="@string/goods_code"
                            android:textColor="#333333"
                            android:textSize="18sp" />

                        <EditText
                            android:id="@+id/take_out_picking_total_list_edit_goods_code"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_weight="3"
                            android:textColor="#333333"
                            android:textSize="18sp"
                            android:selectAllOnFocus="true"
                            android:background="@drawable/input_selector"
                            />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        >

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="7"
                            android:text="@string/goods_name"
                            android:textColor="#333333"
                            android:textSize="18sp" />

                        <EditText
                            android:id="@+id/take_out_picking_total_list_edit_goods_name"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_weight="3"
                            android:textColor="#333333"
                            android:textSize="18sp"
                            android:selectAllOnFocus="true"
                            android:background="@drawable/input_selector"
                            />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        >

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="7"
                            android:text="@string/plt_id"
                            android:textColor="#333333"
                            android:textSize="18sp" />

                        <EditText
                            android:id="@+id/take_out_picking_total_list_edit_plt_id"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_weight="3"
                            android:textColor="#333333"
                            android:textSize="18sp"
                            android:selectAllOnFocus="true"
                            android:background="@drawable/input_selector"
                            />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginTop="10dp"
                        >

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/direction_count"
                            android:textColor="#333333"
                            android:textSize="18sp" />

                        <EditText
                            android:id="@+id/take_out_picking_total_list_edit_direction_plt"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:textColor="#333333"
                            android:textSize="18sp"
                            android:selectAllOnFocus="true"
                            android:background="@drawable/input_selector"
                            android:layout_marginRight="5dp"
                            />

                        <EditText
                            android:id="@+id/take_out_picking_total_list_edit_direction_box"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:textColor="#333333"
                            android:textSize="18sp"
                            android:selectAllOnFocus="true"
                            android:background="@drawable/input_selector"
                            android:layout_marginRight="5dp"
                            />

                        <EditText
                            android:id="@+id/take_out_picking_total_list_edit_direction_ea"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:textColor="#333333"
                            android:textSize="18sp"
                            android:selectAllOnFocus="true"
                            android:background="@drawable/input_selector"
                            />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginTop="10dp"
                        >

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/picking_count"
                            android:textColor="#333333"
                            android:textSize="18sp" />

                        <EditText
                            android:id="@+id/take_out_picking_total_list_edit_picking_plt"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:textColor="#333333"
                            android:textSize="18sp"
                            android:selectAllOnFocus="true"
                            android:background="@drawable/input_selector"
                            android:layout_marginRight="5dp"
                            />

                        <EditText
                            android:id="@+id/take_out_picking_total_list_edit_picking_box"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:textColor="#333333"
                            android:textSize="18sp"
                            android:selectAllOnFocus="true"
                            android:background="@drawable/input_selector"
                            android:layout_marginRight="5dp"
                            />

                        <EditText
                            android:id="@+id/take_out_picking_total_list_edit_picking_ea"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:textColor="#333333"
                            android:textSize="18sp"
                            android:selectAllOnFocus="true"
                            android:background="@drawable/input_selector"
                            />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        >

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="7"
                            android:text="@string/not_take_out_reason"
                            android:textColor="#333333"
                            android:textSize="18sp" />

                        <EditText
                            android:id="@+id/take_out_picking_total_list_edit_reason"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_weight="3"
                            android:textColor="#333333"
                            android:textSize="18sp"
                            android:selectAllOnFocus="true"
                            android:background="@drawable/input_selector"
                            />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        >

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="7"
                            android:text="@string/manufacture_lot"
                            android:textColor="#333333"
                            android:textSize="18sp" />

                        <EditText
                            android:id="@+id/take_out_picking_total_list_edit_manufacture_lot"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_weight="3"
                            android:textColor="#333333"
                            android:textSize="18sp"
                            android:selectAllOnFocus="true"
                            android:background="@drawable/input_selector"
                            />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        >

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/manufacture_date"
                            android:textColor="#333333"
                            android:textSize="18sp" />

                        <EditText
                            android:id="@+id/take_out_picking_total_list_edit_manufacture_date"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_weight="1"
                            android:textColor="#333333"
                            android:textSize="14sp"
                            android:selectAllOnFocus="true"
                            android:background="@drawable/input_selector"
                            />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/distribution_date"
                            android:textColor="#333333"
                            android:textSize="18sp"
                            android:layout_marginLeft="10dp"
                            />

                        <EditText
                            android:id="@+id/take_out_picking_total_list_edit_distribution_date"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_weight="1"
                            android:textColor="#333333"
                            android:textSize="14sp"
                            android:selectAllOnFocus="true"
                            android:background="@drawable/input_selector"
                            />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        >

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="7"
                            android:text="@string/lot1"
                            android:textColor="#333333"
                            android:textSize="18sp" />

                        <EditText
                            android:id="@+id/take_out_picking_total_list_edit_lot1"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_weight="3"
                            android:textColor="#333333"
                            android:textSize="18sp"
                            android:selectAllOnFocus="true"
                            android:background="@drawable/input_selector"
                            />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        >

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="7"
                            android:text="@string/lot2"
                            android:textColor="#333333"
                            android:textSize="18sp" />

                        <EditText
                            android:id="@+id/take_out_picking_total_list_edit_lot2"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_weight="3"
                            android:textColor="#333333"
                            android:textSize="18sp"
                            android:selectAllOnFocus="true"
                            android:background="@drawable/input_selector"
                            />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        >

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="7"
                            android:text="@string/lot3"
                            android:textColor="#333333"
                            android:textSize="18sp" />

                        <EditText
                            android:id="@+id/take_out_picking_total_list_edit_lot3"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_weight="3"
                            android:textColor="#333333"
                            android:textSize="18sp"
                            android:selectAllOnFocus="true"
                            android:background="@drawable/input_selector"
                            />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        >

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="7"
                            android:text="@string/lot4"
                            android:textColor="#333333"
                            android:textSize="18sp" />

                        <EditText
                            android:id="@+id/take_out_picking_total_list_edit_lot4"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_weight="3"
                            android:textColor="#333333"
                            android:textSize="18sp"
                            android:selectAllOnFocus="true"
                            android:background="@drawable/input_selector"
                            />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        >

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="7"
                            android:text="@string/lot5"
                            android:textColor="#333333"
                            android:textSize="18sp" />

                        <EditText
                            android:id="@+id/take_out_picking_total_list_edit_lot5"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_weight="3"
                            android:textColor="#333333"
                            android:textSize="18sp"
                            android:selectAllOnFocus="true"
                            android:background="@drawable/input_selector"
                            />
                    </LinearLayout>
                </LinearLayout>
            </ScrollView>
            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="9"
                android:text="@string/picking_btn"
                android:layout_margin="5dp"
                />
        </LinearLayout>
    </RelativeLayout>

    <android.support.design.widget.NavigationView
        android:id="@+id/take_out_picking_total_list_navi_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:fitsSystemWindows="true"
        app:headerLayout="@layout/menu_header"
        app:menu="@menu/menu_contents" />

</android.support.v4.widget.DrawerLayout>